{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules", "dist"]
}
